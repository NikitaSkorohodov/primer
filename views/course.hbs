<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{course.title}}</title>
  <style>
    .course {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .course h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .course img {
      width: 100%;
      max-width: 400px;
      height: auto;
      margin-bottom: 20px;
    }

    .course .price {
      font-size: 20px;
      color: #f00;
      margin-bottom: 20px;
    }

    .comments {
      text-align: left;
      margin-top: 30px;
    }

    .comments h2 {
      font-size: 22px;
      margin-bottom: 10px;
    }

    .comments ul {
      list-style: none;
      padding: 0;
    }

    .comments li {
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }

    .comments li:last-child {
      border-bottom: none;
    }

    .comments strong {
      display: block;
      font-size: 16px;
      margin-bottom: 5px;
    }

    .comments em {
      font-size: 12px;
      color: #888;
    }

    .add-comment {
      margin-top: 20px;
      text-align: left;
    }

    .add-comment form {
      display: flex;
      flex-direction: column;
    }

    .add-comment label {
      margin-bottom: 5px;
      font-weight: bold;
    }

    .add-comment input,
    .add-comment textarea {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      width: 100%;
    }

    .add-comment button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #007bff;
      color: #fff;
      cursor: pointer;
    }

    .add-comment button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

<div class="course">
  <h1>{{course.title}}</h1>
  <img src="{{course.img}}" alt="{{course.title}}">
  <p class="price">{{course.price}}</p>
  <p>{{course.description}}</p> <!-- Добавлено описание товара -->
  
  <div class="comments">
    <h2>Комментарии</h2>
    <ul>
      {{#each course.comments}}
        <li>
          <strong>{{this.user}}</strong>
          <span>{{this.text}}</span>
          <em>{{this.date}}</em>
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="add-comment">
    <h3>Добавить комментарий</h3>
    {{#if user}}
    <form id="commentForm">
      <input type="hidden" id="user" name="user" value="{{user.username}}"> <!-- Автоматически заполненное имя пользователя -->
      <label for="text">Комментарий:</label>
      <textarea id="text" name="text" required></textarea>
      <button type="submit">Отправить</button>
    </form>
    {{else}}
    <p>Пожалуйста, <a href="/login">войдите</a>, чтобы оставить комментарий.</p>
    {{/if}}
  </div>
</div>

<script>
  document.querySelector('#commentForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const user = document.querySelector('#user').value;
    const text = document.querySelector('#text').value;
    const courseId = '{{course.id}}';

    try {
      const response = await fetch(`/courses/${courseId}/comments`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ user, text })
      });

      if (response.ok) {
        const newComment = await response.json();
        const commentList = document.querySelector('.comments ul');
        const newCommentElement = document.createElement('li');
        newCommentElement.innerHTML = `
          <strong>${newComment.user}</strong>
          <span>${newComment.text}</span>
          <em>${newComment.date}</em>
        `;
        commentList.appendChild(newCommentElement);

        document.querySelector('#text').value = '';
      } else {
        console.error('Failed to add comment');
      }
    } catch (error) {
      console.error('Error:', error);
    }
  });
</script>

</body>
</html>
